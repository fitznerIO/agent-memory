{
  "name": "agent-memory",
  "version": "0.1.0",
  "type": "module",
  "description": "Persistent memory for AI agents. Markdown + SQLite + Git.",
  "license": "MIT",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "bin": {
    "agent-memory": "./src/cli.ts"
  },
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "src/",
    "dist/",
    "README.md"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "sqlite",
    "embeddings",
    "bun"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:memory": "bun test tests/memory/",
    "test:search": "bun test tests/search/",
    "test:git": "bun test tests/git/",
    "test:embedding": "bun test tests/embedding/",
    "test:integration": "bun test tests/integration/",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --fix src/"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.4.0",
    "isomorphic-git": "^1.27.1",
    "remark": "^15.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "sqlite-vec": "^0.1.6",
    "unified": "^11.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
